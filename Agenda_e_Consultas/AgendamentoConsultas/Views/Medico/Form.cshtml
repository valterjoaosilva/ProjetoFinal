
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    <div> 
        <form action="/Medico/Adiciona">
            <label for="nome">Nome:</label>
            <input id="nome" name="medico.Nome" />

            <label for="especialidade">Especialidade:</label>
            <select id="especialidade" name="medico.EspecialidadeId">
                @foreach (var especialidade in ViewBag.Especialidades)
                {
                    <option value="@especialidade.Id">@especialidade.EspecialidadeNome</option>
                  }
                
            </select>
            <label for="descricao">Descricao:</label>
            <input id="descricao" name="medico.Descricao" />

            <input type="submit" value="Cadastrar" />

        </form>
    </div>
</body>
</html>
